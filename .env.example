# Database
# Use Supabase, Neon, or any PostgreSQL provider
DATABASE_URL="postgresql://user:password@host:5432/database?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/database"

# Authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Stripe (International Payments)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Mercado Pago (Brazilian Payments)
# Get from: https://www.mercadopago.com.br/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN="TEST-..."
MERCADOPAGO_PUBLIC_KEY="TEST-..."
MERCADOPAGO_WEBHOOK_SECRET="your-webhook-secret"

# OpenAI
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# OpenRouter (Alternative AI Provider - Optional)
OPENROUTER_API_KEY="sk-or-..."

# Email Service (Optional)
# For transactional emails (password reset, welcome, etc)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="InnerAI <noreply@innerai.com>"

# Development Mode (Optional)
# Set to true to use mock services
DEV_MODE="false"