# Database
# Use Supabase, Neon, or any PostgreSQL provider
DATABASE_URL="postgresql://user:password@host:5432/database?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/database"

# Authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Stripe (International Payments)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (Monthly)
# Create products first, then add the price IDs here
STRIPE_PRICE_LITE="price_..."
STRIPE_PRICE_PRO="price_..."
STRIPE_PRICE_ENTERPRISE="price_..."

# Stripe Price IDs (Yearly - 60% discount)
STRIPE_PRICE_LITE_YEARLY="price_..."
STRIPE_PRICE_PRO_YEARLY="price_..."
STRIPE_PRICE_ENTERPRISE_YEARLY="price_..."

# Mercado Pago (Brazilian Payments)
# Get from: https://www.mercadopago.com.br/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN="TEST-..."
MERCADOPAGO_PUBLIC_KEY="TEST-..."
MERCADOPAGO_WEBHOOK_SECRET="your-webhook-secret"

# OpenAI
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# OpenRouter (Alternative AI Provider - Optional)
OPENROUTER_API_KEY="sk-or-..."

# OAuth Providers (Optional)
# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft Azure AD
# Get from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
AZURE_AD_CLIENT_ID="your-azure-client-id"
AZURE_AD_CLIENT_SECRET="your-azure-client-secret"
AZURE_AD_TENANT_ID="your-azure-tenant-id"

# Apple Sign In
# Get from: https://developer.apple.com/account/resources/identifiers
APPLE_ID="your-apple-service-id"
APPLE_SECRET="your-apple-private-key"

# GitHub OAuth (Already configured if needed)
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# Email Service (Optional)
# For transactional emails (password reset, welcome, etc)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="InnerAI <noreply@innerai.com>"

# Development Mode (Optional)
# Set to true to use mock services
DEV_MODE="false"